@model Shiftbid.Models.ViewModels.ResponsesViewModel

@{
    ViewData["Title"] = "Responses";
}

<div class="alert alert-danger text-center" role="alert">
  If you are Admin, please return to Shiftbid Homepage.
</div>
<form action="" method="post">
    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input required type="email" class="form-control" placeholder="Enter email" asp-for="EmailAddress">
    </div>
    <div class="form-group">
        <label asp-for="Shifts"></label>
        <select class="form-control" asp-for="Shifts" asp-items="@Model.Shifts"></select>
    </div>
    
    <input class="btn btn-primary" type="submit" value="Submit">
    

    
</form>